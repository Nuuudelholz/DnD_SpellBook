<Window x:Class="DnD_SpellBook.AddSpellWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить заклинание" Height="250" Width="400" WindowStartupLocation="CenterOwner">
    <StackPanel Margin="20">
        <TextBlock Text="Название:"/>
        <TextBox x:Name="NameBox" Margin="0,5,0,10"/>

        <TextBlock Text="Описание:"/>
        <TextBox x:Name="DescriptionBox" Margin="0,5,0,10" Height="80" TextWrapping="Wrap" AcceptsReturn="True"/>

        <Button Content="Добавить" HorizontalAlignment="Right" Width="100" Click="Add_Click"/>
    </StackPanel>
</Window>
