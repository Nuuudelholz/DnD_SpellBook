<Window x:Class="DnD_SpellBook.SpellDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Заклинание" Height="400" Width="400"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <ScrollViewer Padding="10" Background="#FF16213C">
        <StackPanel>
            <TextBlock Text="{Binding Name}" FontSize="20" FontWeight="Bold" Margin="0,0,0,10" Foreground="White"/>
            <TextBlock Text="{Binding School, StringFormat= 'Школа: {0}'}" FontStyle="Italic" Margin="0,0,0,5" Foreground="White" FontSize="14"/>
            <TextBlock Text="{Binding Level, StringFormat= 'Уровень: {0}'}" Margin="0,0,0,5" Foreground="White" FontSize="14"/>
            <TextBlock Text="{Binding CastTime, StringFormat= 'Время сотворения: {0}'}" Margin="0,0,0,5" Foreground="White" FontSize="14"/>
            <TextBlock Text="{Binding Range, StringFormat= 'Дистанция: {0}'}" Margin="0,0,0,5" Foreground="White" FontSize="14"/>
            <TextBlock Text="{Binding Components, StringFormat= 'Компоненты: {0}'}" Margin="0,0,0,5" Foreground="White" FontSize="14"/>
            <TextBlock Text="{Binding Duration, StringFormat= 'Длительность: {0}'}" Margin="0,0,0,5" Foreground="White" FontSize="14"/>
            <TextBlock Text="{Binding Classes, StringFormat= 'Классы: {0}'}" Margin="0,0,0,10" Foreground="White" FontSize="14"/>
            <Separator Background="Black"/>
            <TextBlock Text="{Binding Description}" TextWrapping="Wrap" Margin="0,10,0,0" Foreground="White" FontSize="14"/>
        </StackPanel>
    </ScrollViewer>
</Window>
