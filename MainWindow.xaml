<Window x:Class="DnD_SpellBook.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DnD_SpellBook"
        mc:Ignorable="d"
        Title="Dnd Spellbook" Height="734" Width="1203" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Window.Background>
        <SolidColorBrush Color="#FF1E2643"/>
    </Window.Background>

    <Grid Margin="0,0,0,-6">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="8*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button x:Name="ShowUserSpells" Content="Мои заклинания" HorizontalAlignment="Center" VerticalAlignment="Top" Width="200" Height="50" Margin="0,19,0,0" Click="ShowUserSpells_Click" Background="#FF374B5D" Foreground="White"/>
        <Button x:Name="ShowAllSpells" Content="Добавить существующее заклинание" HorizontalAlignment="Center" VerticalAlignment="Top" Width="200" Height="50" Margin="0,89,0,0" Click="ShowAllSpells_Click" Background="#FF374B5D" Foreground="White"/>
        <Button x:Name="AddSpell" Content="Создать новое заклинание" HorizontalAlignment="Center" VerticalAlignment="Top" Width="200" Height="50" Margin="0,159,0,0" Click="AddSpell_Click" Background="#FF374B5D" Foreground="White"/>
        <ScrollViewer Margin="10,10,0,10" Grid.Column="1">
            <Border BorderThickness="1" Grid.Column="1" Width="903" CornerRadius="20" Background="#FF16213C">
                <WrapPanel x:Name="SpellContainer" Width="880"/>
            </Border>
        </ScrollViewer>



    </Grid>
</Window>
